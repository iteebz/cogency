---
import Layout from "../../components/Layout.astro";
import FeatureHero from "../../components/FeatureHero.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import FeatureGrid from "../../components/FeatureGrid.astro";

const title = "Multi-step Reasoning AI Agents - Cogency";
const description =
	"Built-in plan ‚Üí reason ‚Üí act ‚Üí reflect ‚Üí respond loop. Create AI agents that think step-by-step with Cogency's multi-step reasoning architecture.";
const keywords =
	"multi step AI reasoning python, AI agent reasoning loop, cognitive AI agents, step by step AI thinking, AI agent planning";
const canonicalUrl = "https://cogency.dev/features/multi-step-reasoning";

const relatedFeatures = [
	{
		href: "/features/zero-config",
		title: "Zero Configuration",
		description: "Multi-step reasoning with zero setup required.",
		icon: "M13 10V3L4 14h7v7l9-11h-7z",
		color: "blue"
	},
	{
		href: "/features/streaming",
		title: "Streaming Execution",
		description: "Watch each reasoning step unfold in real-time.",
		icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
		color: "purple"
	},
	{
		href: "/features/extensibility",
		title: "Highly Extensible",
		description: "Customize each step of the reasoning process.",
		icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
		color: "cyan"
	}
];
---

<Layout
	title={title}
	description={description}
	keywords={keywords}
	canonicalUrl={canonicalUrl}
>
	<FeatureHero
		badge="üß† Multi-step Reasoning"
		badgeColor="border-orange-500/20 bg-orange-500/10 text-orange-400"
		title="Agents that"
		titleGradient="from-white via-orange-100 to-orange-200"
		subtitle="think step-by-step"
		description="Built-in plan ‚Üí reason ‚Üí act ‚Üí reflect ‚Üí respond cognitive loop. Create AI agents that break down complex problems systematically."
		ctaText="See the Loop"
		ctaLink="#reasoning-loop"
		ctaColor="bg-orange-600 hover:bg-orange-500 focus:ring-orange-500/50"
	/>

	<!-- Reasoning Loop Explanation -->
	<section
		id="reasoning-loop"
		class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16"
	>
		<div class="mx-auto max-w-6xl">
			<div class="mb-16 text-center">
				<h2 class="mb-6 text-3xl font-bold text-white">
					The Five-Step Cognitive Loop
				</h2>
				<p class="mx-auto max-w-3xl text-xl text-gray-300">
					Cogency agents follow a structured reasoning process inspired by human
					cognitive patterns. Each step builds on the previous, creating
					intelligent, deliberate responses.
				</p>
			</div>

			<div class="grid gap-8 lg:grid-cols-5">
				<div class="text-center">
					<div
						class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-blue-500/10"
					>
						<span class="text-2xl font-bold text-blue-400">1</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-blue-400">Plan</h3>
					<p class="text-sm text-gray-300">
						Break down the problem into actionable steps
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-500/10"
					>
						<span class="text-2xl font-bold text-green-400">2</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-green-400">Reason</h3>
					<p class="text-sm text-gray-300">
						Analyze information and consider approaches
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-yellow-500/10"
					>
						<span class="text-2xl font-bold text-yellow-400">3</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-yellow-400">Act</h3>
					<p class="text-sm text-gray-300">
						Execute tools and gather information
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-purple-500/10"
					>
						<span class="text-2xl font-bold text-purple-400">4</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-purple-400">Reflect</h3>
					<p class="text-sm text-gray-300">
						Evaluate results and adjust approach
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-orange-500/10"
					>
						<span class="text-2xl font-bold text-orange-400">5</span>
					</div>
					<h3 class="mb-2 text-xl font-semibold text-orange-400">Respond</h3>
					<p class="text-sm text-gray-300">
						Synthesize findings into final answer
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Code Example -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold text-white">
					Multi-step Reasoning in Action
				</h2>
				<p class="text-xl text-gray-300">
					Watch an agent systematically solve a complex problem
				</p>
			</div>

			<CodeBlock title="complex_analysis.py">
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.agent</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">Agent</span>
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.services.llm</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">GeminiLLM</span>
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.tools</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">WebSearchTool, CalculatorTool</span>

				<span class="text-gray-500"
					># Create an agent with reasoning capabilities</span
				>
				<span class="text-white">agent</span>
				<span class="text-pink-400">=</span>
				<span class="text-yellow-400">Agent</span><span class="text-white"
					>(</span
				>
				<span class="text-blue-400">name</span><span class="text-pink-400"
					>=</span
				><span class="text-green-400">"Research Analyst"</span><span
					class="text-white">,</span
				>
				<span class="text-blue-400">llm</span><span class="text-pink-400"
					>=</span
				><span class="text-yellow-400">GeminiLLM</span><span class="text-white"
					>(</span
				><span class="text-blue-400">api_key</span><span class="text-pink-400"
					>=</span
				><span class="text-green-400">"your-key"</span><span class="text-white"
					>),</span
				>
				<span class="text-blue-400">tools</span><span class="text-pink-400"
					>=</span
				><span class="text-white">[</span><span class="text-yellow-400"
					>WebSearchTool</span
				><span class="text-white">(),</span>
				<span class="text-yellow-400">CalculatorTool</span><span
					class="text-white">()]</span
				>
				<span class="text-white">)</span>

				<span class="text-gray-500"
					># Complex query requiring multi-step reasoning</span
				>
				<span class="text-white">result</span>
				<span class="text-pink-400">=</span>
				<span class="text-pink-400">await</span>
				<span class="text-white">agent</span><span class="text-white">.</span
				><span class="text-yellow-400">run</span><span class="text-white"
					>(</span
				>
				<span class="text-green-400"
					>"Compare the market cap of Tesla vs Toyota, then calculate "</span
				>
				<span class="text-green-400"
					>"what percentage Tesla would need to grow to match Toyota"</span
				>
				<span class="text-white">)</span>
			</CodeBlock>

			<!-- Reasoning Process Visualization -->
			<div class="mt-12 space-y-6">
				<h3 class="mb-6 text-2xl font-bold text-white">How the Agent Thinks</h3>

				<div class="rounded-lg border border-blue-500/20 bg-gray-900/50 p-6">
					<div class="mb-3 flex items-center gap-3">
						<div
							class="flex h-8 w-8 items-center justify-center rounded-full bg-blue-500/20"
						>
							<span class="text-sm font-bold text-blue-400">1</span>
						</div>
						<h4 class="text-lg font-semibold text-blue-400">Plan Phase</h4>
					</div>
					<p class="ml-11 text-gray-300">
						"I need to: 1) Find Tesla's current market cap, 2) Find Toyota's
						market cap, 3) Calculate the difference, 4) Determine growth
						percentage needed"
					</p>
				</div>

				<div class="rounded-lg border border-green-500/20 bg-gray-900/50 p-6">
					<div class="mb-3 flex items-center gap-3">
						<div
							class="flex h-8 w-8 items-center justify-center rounded-full bg-green-500/20"
						>
							<span class="text-sm font-bold text-green-400">2</span>
						</div>
						<h4 class="text-lg font-semibold text-green-400">Reason Phase</h4>
					</div>
					<p class="ml-11 text-gray-300">
						"Market caps change frequently, so I need current data. Web search
						will give me the most recent figures for both companies."
					</p>
				</div>

				<div class="rounded-lg border border-yellow-500/20 bg-gray-900/50 p-6">
					<div class="mb-3 flex items-center gap-3">
						<div
							class="flex h-8 w-8 items-center justify-center rounded-full bg-yellow-500/20"
						>
							<span class="text-sm font-bold text-yellow-400">3</span>
						</div>
						<h4 class="text-lg font-semibold text-yellow-400">Act Phase</h4>
					</div>
					<p class="ml-11 text-gray-300">
						üîç <em>Searching web for "Tesla market cap 2024"...</em><br />
						üîç <em>Searching web for "Toyota market cap 2024"...</em><br />
						üßÆ <em>Calculating percentage difference...</em>
					</p>
				</div>

				<div class="rounded-lg border border-purple-500/20 bg-gray-900/50 p-6">
					<div class="mb-3 flex items-center gap-3">
						<div
							class="flex h-8 w-8 items-center justify-center rounded-full bg-purple-500/20"
						>
							<span class="text-sm font-bold text-purple-400">4</span>
						</div>
						<h4 class="text-lg font-semibold text-purple-400">Reflect Phase</h4>
					</div>
					<p class="ml-11 text-gray-300">
						"I found Tesla at $800B and Toyota at $250B. Wait, that seems wrong
						- let me double-check Toyota's figure as Tesla is typically
						smaller..."
					</p>
				</div>

				<div class="rounded-lg border border-orange-500/20 bg-gray-900/50 p-6">
					<div class="mb-3 flex items-center gap-3">
						<div
							class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-500/20"
						>
							<span class="text-sm font-bold text-orange-400">5</span>
						</div>
						<h4 class="text-lg font-semibold text-orange-400">Respond Phase</h4>
					</div>
					<p class="ml-11 text-gray-300">
						"Based on current data: Tesla ($800B) vs Toyota ($250B). Tesla would
						need to grow by 31.25% to match Toyota's market cap."
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Benefits Section -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-3xl font-bold text-white">
				Why Multi-step Reasoning Matters
			</h2>
			<div class="grid gap-8 lg:grid-cols-3">
				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-blue-500/10"
					>
						<svg
							class="h-8 w-8 text-blue-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
							></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">
						Systematic Problem Solving
					</h3>
					<p class="text-gray-300">
						Break complex queries into manageable steps, ensuring thorough
						analysis and comprehensive solutions.
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-green-500/10"
					>
						<svg
							class="h-8 w-8 text-green-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">Self-Correction</h3>
					<p class="text-gray-300">
						Built-in reflection allows agents to catch errors, verify results,
						and adjust their approach mid-execution.
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-purple-500/10"
					>
						<svg
							class="h-8 w-8 text-purple-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">
						Transparent Reasoning
					</h3>
					<p class="text-gray-300">
						Every step is visible and traceable, making agent behavior
						predictable and debuggable in production.
					</p>
				</div>
			</div>
		</div>
	</section>

	<FeatureGrid title="Enhanced by Other Features" features={relatedFeatures} />

	<!-- CTA -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-6 text-3xl font-bold text-white">
				Ready for Intelligent Reasoning?
			</h2>
			<p class="mb-8 text-xl text-gray-300">
				Build AI agents that think step-by-step with Cogency's built-in
				cognitive loop
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center sm:gap-6">
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-lg bg-orange-600 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-orange-500 focus:ring-4 focus:ring-orange-500/50"
				>
					Start Building
					<svg
						class="ml-2 h-5 w-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 7l5 5-5 5M6 12h12"></path>
					</svg>
				</a>
				<a
					href="https://github.com/iteebz/cogency"
					class="inline-flex items-center justify-center rounded-lg border border-gray-600 bg-gray-800/50 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-gray-700"
				>
					<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					View on GitHub
				</a>
			</div>
		</div>
	</section>
</Layout>
